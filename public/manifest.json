{
  "name": "Auto Load YouTube Video Chapters",
  "description": "Watch YouTube Videos With Chapters",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["/assets/index.js"],
    "run_at": "document_end"
  }],
  "action": {
    "default_title": "Auto Load YouTube Video Chapters",
    "default_popup": "popup.html",
    "default_icon": {        
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}